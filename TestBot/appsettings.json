{
    "ApplicationSettings": {
        "PicsDirectory": "",
        "TelegramBotToken": "",
        "CoronaApiBaseUrl": "https://opendata.ecdc.europa.eu/covid19/casedistribution/",
        "SubscriptionTimerTriggeredAt": "10:00:00",
        "MaintenanceTimerTriggeredAt": "22:00:00"
    },

    "DatabaseSettings": {
        "ConnectionStrings": {
            "Default": "Data Source=.\\DB\\Users.db; Version=3;"
        }
    },

    "Serilog": {
        "MinimumLevel": "Debug",
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        },
        "WriteTo": [
            {
                "Name": "RollingFile",
                "Args": {
                    "logDirectory": ".\\Logs",
                    "fileSizeLimitBytes": 1048576,
                    "retainedFileCountLimit": 30,
                    "pathFormat": "Logs/{Date}.log",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}"
                }
            }
        ]
    }
}
