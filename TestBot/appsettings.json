    "ApplicationSettings": {
        "PicsDirectory": "",
        "LoremPicsumApiBaseUrl": "https://picsum.photos/3840/2160.jpg",
        "TelegramBotToken": "",
        "CoronaApiBaseUrl": "https://opendata.ecdc.europa.eu/covid19/casedistribution/json",
        "SubscriptionTimerTriggeredAt": "10:00:00",
        "MaintenanceTimerTriggeredAt": "22:00:00",
